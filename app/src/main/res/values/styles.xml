<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="registration_edit_texts_style">
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">@dimen/edit_text_padding</item>
        <item name="android:textColor">@color/cft_black_color</item>
        <item name="android:textSize">@dimen/edit_text_size</item>
        <item name="android:background">@drawable/registration_text_fields</item>
        <item name="android:layout_marginEnd">@dimen/edit_text_margin_start_end</item>
        <item name="android:layout_marginStart">@dimen/edit_text_margin_start_end</item>
        <item name="android:layout_marginTop">@dimen/edit_text_margin_top_bottom</item>
        <item name="android:layout_marginBottom">@dimen/edit_text_margin_top_bottom</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">left|center</item>
        <item name="android:singleLine">true</item>
        <item name="android:stateListAnimator">@animator/edit_text_animation</item>
    </style>

    <style name="buttons_style">
        <item name="android:textAllCaps">false</item>
        <item name="android:font">@font/staatliches</item>
        <item name="android:paddingRight">@dimen/button_text_padding</item>
        <item name="android:paddingLeft">@dimen/button_text_padding</item>
        <item name="android:paddingTop">@dimen/button_text_padding_top</item>
        <item name="android:paddingBottom">@dimen/button_text_padding_top</item>
        <item name="android:textColor">@color/buttons_text_color</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:background">@drawable/buttons_background</item>
        <item name="android:layout_marginEnd">@dimen/edit_text_margin_start_end</item>
        <item name="android:layout_marginStart">@dimen/edit_text_margin_start_end</item>
        <item name="android:layout_marginTop">@dimen/edit_text_special_margin_top_bottom</item>
        <item name="android:layout_marginBottom">@dimen/edit_text_special_margin_top_bottom</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="error_text_style">
        <item name="android:gravity">left|center</item>
        <item name="android:textSize">@dimen/error_text_size</item>
        <item name="android:paddingStart">@dimen/error_text_padding_start_end</item>
        <item name="android:paddingEnd">@dimen/error_text_padding_start_end</item>
        <item name="android:textColor">@color/cft_red_color</item>
    </style>

    <style name="helper_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">@dimen/small_button_margin</item>
        <item name="android:background">@drawable/small_button_background</item>
        <item name="android:contentDescription">@string/content_description</item>
        <item name="android:padding">@dimen/small_button_padding</item>
        <item name="android:scaleType">center</item>
        <item name="android:translationZ">10dp</item>
    </style>
</resources>